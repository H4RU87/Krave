<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>

  <link rel='stylesheet' href='/stylesheets/modaltest2.css'/>

  <script type="text/javascript" src="/js/jquery.js"></script>

</head>

<body class="container-fluid">

<img id="logo2" src="http://i.imgur.com/Zz3Uc8N.png?1">
 </div>
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3>My KRAVINGs:</h3>
      <% kravings.forEach(function(kraving) { %>
        <h4>
            <a href="/kravings/<%= kraving._id %>">
              <%= kraving.name %>
            </a>
            <form method="GET" action="/kravings/<%= kraving._id %>/edit">
              <button type="submit" class="btn btn-xs btn-danger">Edit</button>
            </form>
            <form method="POST" action="/kravings/<%= kraving._id %>?_method=DELETE">
              <button type="submit" class="btn btn-xs btn-danger">Delete</button>
            </form>
        </h4>
      <% }) %>
    </div>
    <a href="/kravings/new" class="btn btn-primary">New</a><br />

  </main>
  <div class="footer">
  <footer>
    <% include ../partials/footer %>
  </footer>
  </div>
</body>
</html>
